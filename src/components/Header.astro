---
import { supabase } from "@lib/supabaseClient.ts";
const { data: buttons, error: buttonsError } = await supabase
   .from("menu_button")
   .select("*")
   .eq("isactive", true);
if (buttonsError) {
   console.error("Error fetching buttons:", buttonsError.message);
}
