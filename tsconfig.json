{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
     "baseUrl": ".",
     "paths": {
        "@components/*": ["src/components/*"],
        "@assets/*": ["src/assets/*"],
        "@layouts/*": ["src/layouts/*"],
        "@scripts/*": ["src/scripts/*"],
        "@lib/*": ["src/lib/*"]
     },
     "jsx": "react-jsx",
     "jsxImportSource": "preact"
  }
}